.contents
  .signup-header
    %h1
      =link_to image_tag("logo.png"),"#"
    .signup-bar

  .main
    .box
      %h2.box-header
        ログイン
      %h2アカウントをお持ちでない方はこちら
      .signup-btn
        =link_to "新規会員登録",new_user_registration_path
      %form.box-form
        .box-form__content
          .box-form__content__input
            %label メールアドレス
            %input{placeholder: "PC・携帯どちらでも可", class: "form__input", type: "email"}
            .box-form__content__input__message
          .box-form__content__input
            %label パスワード
            %input{placeholder: "７文字以上の半角英数字", class: "form__input", type: "password"}
            .box-form__content__input__message
      .signup
        %button{class: "signup__btn", type: "submit"}
          ログイン











          
