.wrapper
  = render 'toppages/header'

  .main
    .showMain
      .contentLeft
      .contentRight
        .topContent
          .itemBox
            %h2.itemBox__name product3
            .itemBox__body
              %ul
                %li
                  =image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png")
                %ul
                  %li
                    =image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png")
                  %li
                    =image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/10/a004.png")
                  %li
                    =image_tag("https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/7/a001.png")

            .itemBox_price
            .itemDetail 
            .table
              %table
                %tr
                  %th 出品者
                  %td hoge
                %tr
                  %th カテゴリー
                  %td 
                    =link_to "べビー・キッズ","/"
                    %br
                    =link_to "べビー服（男女兼用）~９５cm","/"
                    %br
                    =link_to "アウター","/"
                %tr
                  %th ブランド
                  %td 
                %tr
                  %th 商品サイズ
                  %td
                %tr
                  %th 商品の状態
                  %td 未使用に近い
                %tr
                  %th 配送料の負担
                  %td 送料込み（出品者負担）
                %tr
                  %th 配送元の地域
                  %td
                    =link_to "岩手県","/"
                %tr
                  %th 配送日の目安
                  %td 4-7日で発送
            .optionalArea
          .conmmentBox
        %ul.links

        .relatedItems          
  .footer
  %ul.contents
    %li.content
      %h2.content__head FURIMAについて
      %ul
        %li= link_to '会社概要(運営会社)', '#' 
        %li= link_to 'プライバシーポリシー', '#' 
        %li= link_to 'FURIMA利用規約', '#' 
        %li= link_to 'ポイントに関する特約', '#' 
    %li.content
      %h2.content__head FURIMAを見る
      %ul
        %li= link_to 'カテゴリー一覧', '#' 
        %li= link_to 'ブランド一覧', '#' 
    %li.content
      %h2.content__head ヘルプ＆ガイド
      %ul
        %li= link_to 'FURIMAガイド', '#' 
        %li= link_to 'FURIMAロゴ利用ガイドライン', '#' 
        %li= link_to 'お知らせ', '#' 

  .footer__logos
    =link_to image_tag('logo-white.png', size: "160x46" ), '#'

  %p &copy; FURIMA


  .exhibitionBtn
    .exhibitionBtn__text 
      = form_with "パスを指定" do
        :plain
        %script{type: "text/javascript", src: "https://checkout.pay.jp", class:"payjp-button", "data-text": "購入する", "data-key": "公開鍵（pk_~）"}
  = render 'toppages/footer'
